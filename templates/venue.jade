            maxZoom: 20,
            ext: 'png'
        }).addTo(map);

        var kaneHall = L.marker(kaneHallCoordinates).bindPopup(
            '<h3>Kane Hall</h3>University of Washington<br>' +
            '4069 Spokane Lane<br>' +
            'Seattle, WA 98103<br><br>' +
            '<a style="color: black" href="https://goo.gl/maps/hfaPk9bsTZJ2">View on Google Maps</a>'
        ).addTo(map);
        kaneHall.openPopup();
